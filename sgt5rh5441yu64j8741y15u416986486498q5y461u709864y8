        "", "Billboard", 1, 3.2,
        [0,0,0], [0,0,0], 18, 1, 1, 0,
        [1.25,1.5,2.5],
        [
            [0.05,0.05,0.05,0.6],
            [0.05,0.05,0.05,0.9],
            [0.1,0.1,0.1,0.8],
            [0.1,0.1,0.1,0.65],
            [0.1,0.1,0.1,0.5],
            [0.1,0.1,0.1,0.35],
            [0.1,0.1,0.1,0.25],
            [0.1,0.1,0.1,0.15],
            [0.1,0.1,0.1,0]
